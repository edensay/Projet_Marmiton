<style>
    h2 {
        text-align:center;
    }
    .cont {
        width: 80%;
        margin: auto;
        border: solid;
        border-radius: 15px;
    }
    .nom {
        width: 50%;
        margin: auto;
    }
    .ingredient {
        width: 80%;
        margin: auto;
    }
</style>

<h2>Recherche</h2><br><br>
<div class="cont">
<h3>Mot clé</h3>
        <form enctype="multipart/form-data" method="post" action="/resultat">
        <input type="text" class="form-control nom" placeholder="Mot clé" name="titre">
        <h3>Ingrédients</h3>
        <p class="ingredient"><select name="ingredient[]" class="form-control tag">
            <option>-- Selectionner un ingredient --</option>
            {% for ingredients in ingredients %}
            <option name="ingredient[]" value="{{ingredients.idil}}">{{ingredients.nom}}</option>
            {% endfor %}
        </select>
        <select name="ingredient[]" class="form-control tag">
            <option>-- Selectionner un deuxieme ingredient --</option>
            {% for ingredients in ingredients %}
            <option name="ingredient[]" value="{{ingredients.idil}}">{{ingredients.nom}}</option>
            {% endfor %}
        </select></p><br>
        <h3>Catégorie</h3>
        <p class="ingredient"><select name="tag[]" class="form-control tag">
            <option>-- Selectionner une categorie --</option>
            {% for tags in tags %}
            <option name="tag[]" value="{{tags.idt}}">{{tags.nom}}</option>
            {% endfor %}
        </select>
        <select name="tag[]" class="form-control tag">
            <option>-- Selectionner une deuxieme categorie --</option>
            {% for tags in tags %}
            <option name="tag[]" value="{{tags.idt}}">{{tags.nom}}</option>
            {% endfor %}
        </select></p><br>
        <p class="center"><input type="submit" name="submit" value="Rechercher une recette" class="btn btn-default"></p>
        </form>
</div>